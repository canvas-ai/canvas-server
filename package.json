{
  "name": "canvas-server",
  "productName": "Canvas Server",
  "version": "2.0.1-alpha.3",
  "description": "Context layer on top of your unstructured universe",
  "main": "./src/init.js",
  "type": "module",
  "bin": {
    "canvas": "./bin/canvas",
    "ws": "./bin/ws",
    "context": "./bin/context"
  },
  "scripts": {
    "start": "cross-env DEBUG=canvas* node --import ./src/utils/path-resolver/index.js ./src/init.js",
    "start:dev": "cross-env DEBUG=* node --import ./src/utils/path-resolver/index.js ./src/init.js",
    "pm2:start": "PM2_HOME=../var/pm2 pm2 start ecosystem.config.js --watch",
    "pm2:stop": "PM2_HOME=../var/pm2 pm2 stop ecosystem.config.js",
    "pm2:restart": "PM2_HOME=../var/pm2 pm2 restart ecosystem.config.js",
    "pm2:status": "PM2_HOME=../var/pm2 pm2 status ecosystem.config.js",
    "pm2:startup": "PM2_HOME=../var/pm2 pm2 startup ecosystem.config.js",
    "pm2:logs": "PM2_HOME=../var/pm2 pm2 logs ecosystem.config.js",
    "pm2:kill": "PM2_HOME=../var/pm2 pm2 kill",
    "update-submodules": "git submodule update --init --remote && git submodule foreach \"git add .\"",
    "build": "npm run build -w src/ui/web",
    "postinstall": "npm run build -w src/ui/web",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "workspaces": [
    ".",
    "src/ui/cli",
    "src/ui/web",
    "src/services/synapsd",
    "src/services/neurald",
    "src/services/stored"
  ],
  "author": "me@idnc.sk",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "pm2": "^5.3.1",
    "adm-zip": "^0.5.16",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "better-queue": "^3.8.12",
    "body-parser": "^1.20.2",
    "conf": "^13.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "debug": "^4.3.4",
    "dockerode": "^4.0.2",
    "dockerode-compose": "^1.4.0",
    "dotenv": "^16.3.1",
    "dotprop": "^1.2.1",
    "eventemitter2": "^6.4.9",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "figlet": "^1.8.0",
    "fs-extra": "^11.1.1",
    "ip": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "lokijs": "^1.5.12",
    "lru-ttl-cache": "^2.4.8",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "node-machine-id": "^1.1.12",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "randomcolor": "^0.6.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ulid": "^2.4.0",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "winston": "^3.10.0",
    "@inquirer/confirm": "^3.1.4",
    "commander": "^12.1.0",
    "cross-spawn": "^7.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^15.9.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  }
}
