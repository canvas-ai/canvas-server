{
  "name": "canvas-server",
  "productName": "Canvas Server Mini",
  "version": "1.0.0-alpha.1",
  "description": "Context layer on top of your unstructured universe",
  "main": "./src/init.js",
  "type": "module",
  "scripts": {
    "start": "cross-env DEBUG=canvas* node ./src/init.js",
    "dev": "cross-env DEBUG=* NODE_ENV=development node ./src/init.js",
    "update-submodules": "git submodule update --init --remote && git submodule foreach \"git add .\"",
    "build": "npm run build -w src/ui/web && npm run build -w src/ui/browser",
    "postinstall": "npm run build -w src/ui/web && npm run build -w src/ui/browser",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix"
  },
  "workspaces": [
    ".",
    "src/ui/cli",
    "src/ui/web",
    "src/ui/browser",
    "src/ui/shell",
    "src/services/synapsd",
    "src/services/neurald",
    "src/services/stored"
  ],
  "author": "me@idnc.sk",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@fastify/auth": "^4.4.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/error": "^3.4.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.3.1",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "bcryptjs": "^2.4.3",
    "conf": "^13.1.0",
    "cross-env": "^7.0.3",
    "debug": "^4.4.0",
    "dotenv": "^16.5.0",
    "eventemitter2": "^6.4.9",
    "fastify": "^4.24.3",
    "fastify-socket.io": "^5.1.0",
    "fastmcp": "^2.1.2",
    "imapflow": "^1.0.187",
    "jsonwebtoken": "^9.0.2",
    "node-machine-id": "^1.1.12",
    "pino-pretty": "^10.3.1",
    "randomcolor": "^0.6.2",
    "socket.io": "^4.8.1",
    "ulid": "^3.0.0",
    "uuid": "^11.1.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0",
    "zod": "^3.25.26",
    "zod-to-json-schema": "^3.24.5"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "devDependencies": {
    "@types/socket.io-client": "^3.0.0",
    "eventsource": "^4.0.0",
    "node-fetch": "^3.3.2"
  }
}
