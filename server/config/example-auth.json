{
  "strategies": {
    "local": {
      "enabled": true,
      "allowRegistration": true
    },
    "imap": {
      "enabled": true,
      "autoCreateUsers": true,
      "defaultUserType": "user",
      "defaultStatus": "active",
      "domains": {
        "company.com": {
          "host": "mail.company.com",
          "port": 993,
          "secure": true,
          "domain": "company.com",
          "name": "Company Mail Server (SSL/TLS)"
        },
        "example.org": {
          "host": "imap.example.org",
          "port": 143,
          "secure": false,
          "startTLS": true,
          "domain": "example.org",
          "name": "Example Organization (STARTTLS)"
        },
        "gmail.com": {
          "host": "imap.gmail.com",
          "port": 993,
          "secure": true,
          "domain": "gmail.com",
          "name": "Gmail (SSL/TLS)",
          "requireAppPassword": true
        },
        "outlook.com": {
          "host": "outlook.office365.com",
          "port": 993,
          "secure": true,
          "domain": "outlook.com",
          "name": "Microsoft Outlook (SSL/TLS)",
          "tlsOptions": {
            "servername": "outlook.office365.com"
          }
        },
        "test.local": {
          "host": "mail.test.local",
          "port": 143,
          "secure": false,
          "startTLS": false,
          "domain": "test.local",
          "name": "Local Test Server (Plain Text)",
          "tlsOptions": {
            "rejectUnauthorized": false
          }
        }
      }
    }
  },
  "defaultStrategy": "local",
  "session": {
    "jwtExpiry": "7d",
    "refreshTokenExpiry": "30d"
  }
}
