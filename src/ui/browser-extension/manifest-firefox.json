{
  "manifest_version": 3,
  "name": "Canvas Browser Extension",
  "version": "2.0.0",
  "description": "Seamlessly sync browser tabs with Canvas server contexts",

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "background"
  ],

  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*"
  ],

    "background": {
    "scripts": ["service-worker.js"],
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Canvas Extension",
    "default_icon": {
      "16": "assets/icons/logo-br_64x64.png",
      "32": "assets/icons/logo-br_64x64.png",
      "48": "assets/icons/logo-br_64x64.png",
      "64": "assets/icons/logo-br_64x64.png",
      "128": "assets/icons/logo-br_64x64.png"
    }
  },

  "icons": {
    "16": "assets/icons/logo-br_64x64.png",
    "32": "assets/icons/logo-br_64x64.png",
    "48": "assets/icons/logo-br_64x64.png",
    "64": "assets/icons/logo-br_64x64.png",
    "128": "assets/icons/logo-br_64x64.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:* https://*; style-src 'self' 'unsafe-inline';"
  },

  "web_accessible_resources": [
    {
      "resources": ["settings/settings.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "canvas-extension@canvas-server.com",
      "strict_min_version": "109.0"
    }
  }
}
